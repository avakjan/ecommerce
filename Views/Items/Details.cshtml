@model OnlineShoppingSite.Models.Item

@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <!-- Display the item image -->
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <!-- Display item details -->
        <h3>@Model.Price.ToString("C")</h3>
        <p><strong>Category:</strong> @Model.Category.Name</p>
        <p>@Model.Description</p>

        <form asp-action="AddToCart" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.ItemId" />
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 100px;" />
            </div>
            <button type="submit" class="btn btn-primary">Add to Cart</button>
            <a asp-action="Index" class="btn btn-secondary">Back to Shop</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}