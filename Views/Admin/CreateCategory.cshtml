@model OnlineShoppingSite.Models.Category

@{
    var isEdit = ViewContext.ActionDescriptor.RouteValues["action"] == "EditCategory";
    ViewData["Title"] = isEdit ? "Edit Category" : "Create Category";
}

<h2>@ViewData["Title"]</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="@ViewContext.ActionDescriptor.RouteValues["action"]" method="post">
    @Html.AntiForgeryToken()
    @if (isEdit)
    {
        <input type="hidden" asp-for="CategoryId" />
    }

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ManageCategories" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}