@model IEnumerable<OnlineShoppingSite.Models.Item>

@{
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>

<a asp-action="CreateProduct" class="btn btn-primary">Add New Product</a>
<a asp-action="BulkUploadProducts" class="btn btn-secondary">Bulk Upload Products</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <!-- Add more columns as needed -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price.ToString("C")</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="EditProduct" asp-route-id="@item.ItemId" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="DeleteProduct" asp-route-id="@item.ItemId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>