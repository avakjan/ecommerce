<!-- views/Admin/ManageOrders.cshtml -->

@model IEnumerable<OnlineShoppingSite.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<h2>Manage Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.OrderDate.ToString("g")</td>
            <td>@order.ShippingDetails.FullName</td>
            <td>@order.TotalAmount.ToString("C0")</td>
            <td>@order.Status</td>
            <td>
                <a asp-action="ViewOrder" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>